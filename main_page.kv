WindowManager:
    MainScreen:
    ScanBarcodePage:
    SearchIngredientsPage:
    InformationProductPage:
    InformationIngredientsPage:

<MainScreen>:
#background

    name: 'main'
    canvas.before:
        Rectangle:
            source: 'bg.png'
            pos: self.pos
            size: self.size

#base boxlayout

    MDBoxLayout:
        orientation: 'vertical'

#boxlayout for title

        MDBoxLayout:
            size_hint: 1, 0.25

            MDLabel:
                text: 'INGBAR'
                halign: 'center'
                font_name: 'Lemon-Regular.ttf'
                color: 0.806, 0.494, 0.33
                font_size: '80sp'

#boxlayout for image

        MDBoxLayout:
            padding: sp(10)
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

            Image:
                source: 'picture_main.png'
                size: self.texture_size

#boxlayout to hold buttons

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.54, 0.3
            padding: sp(12)
            pos_hint: {'center_x': 0.5, 'center_y': 1}

            MDGridLayout:
                cols: 1
                rows: 3

                Button:

                    text: 'Scan a barcode'
                    font_name: 'LexendDeca-VariableFont_wght.ttf'
                    font_size: '14sp'
                    background_normal: ''
                    background_color: 0, 0, 0, 0

                    canvas.before:
                        Color:
                            rgb: 191/255, 126/255, 120/255, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [20]

                    on_press:
                        app.root.current = 'second_page'
                        root.manager.transition.direction = 'left'

#label for space between buttons

                MDLabel:
                    size_hint: 0.1, 0.4
                    text: '   '

                Button:
                    text: 'Search for ingredients'
                    font_name: 'LexendDeca-VariableFont_wght.ttf'
                    font_size: '14sp'
                    background_normal: ''
                    background_color: 0, 0, 0, 0

                    canvas.before:
                        Color:
                            rgb: 155/255, 187/255, 169/255, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [20]

                    on_press:
                        app.root.current = 'thr_page'
                        root.manager.transition.direction = 'left'


#boxloyout to hold icons in grid layout

        MDBoxLayout:

            orientation: 'vertical'
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

            MDGridLayout:
                cols: 3
                pos_hint: {'center_x': 0.5}

                MDIconButton:
                    size_hint: 1,1
                    col: 1
                    icon: 'account-circle-outline'

                MDIconButton:
                    size_hint: 1,1
                    col: 2
                    icon: 'instagram'

                MDIconButton:
                    size_hint: 1,1
                    col: 3
                    icon: 'facebook'

#################################################################
####### SECOND PAGE - FOR BARCODE SCANING #######################


<ScanBarcodePage>:

    name: 'second_page'
    canvas.before:
        Rectangle:
            source: 'bg.png'
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: "vertical"
        padding: 35
        spacing: 11

        #:import ZBarCam kivy_garden.zbarcam.ZBarCam
        #:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol
        MDBoxLayout:
            id: 'ScanField'
            orientation: 'vertical'
            pos_hint: {'center_x':0.5}
            # ZBarCam:
            #     id: zbarcam
            #     # optional, by default checks all types
            #     code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13
            #     on_symbols: root.get_product_by_ean(self.symbols)
            # Label:
            #     size_hint: None, None
            #     size: self.texture_size[0], 50
            #     text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])

            #Name of the prdct
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x':0.5}
            size_hint: .8, .12

            MDLabel:
                id: NameOfThePrdct
                text: 'Name of the product'
                font_name: 'LexendDeca-VariableFont_wght.ttf'
                font_size: '14sp'
                background_normal: ''
                theme_text_color: "Custom"
                text_color: "white"
                background_color: 0, 0, 0, 0
                halign: 'center'

                canvas.before:
                    Color:
                        rgb: 155/255, 187/255, 169/255, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.54, 0.15
            pos_hint: {'center_x':0.5}

            Button:
                id: GoToProduct
                text: 'Go to the product'
                font_name: 'LexendDeca-VariableFont_wght.ttf'
                font_size: '14sp'
                background_normal: ''
                background_color: 0, 0, 0, 0
                # on_press: root.get_product()

                canvas.before:
                    Color:
                        rgb: 206/255, 137/255, 100/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .2, .15
            pos_hint: {'center_x':0.5}
            halign: 'center'

            MDIconButton:
                pos_hint: {'center_x':0.5}
                halign: 'center'
                icon: 'keyboard-backspace'
                theme_text_color: "Custom"
                text_color: "white"
                background_normal: ''
                md_bg_color: 0, 0, 0, 0


                canvas.before:
                    Color:
                        rgb: 191/255, 126/255, 120/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [360]

                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 50,10
            MDLabel:
                text: '  '

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, .1
            pos_hint: {'center_x': 0.5}

            MDGridLayout:
                cols: 3

                MDIconButton:
                    size_hint: 1,1
                    col: 1
                    icon: 'account-circle-outline'

                MDIconButton:
                    size_hint: 1,1
                    col: 2
                    icon: 'instagram'

                MDIconButton:
                    size_hint: 1,1
                    col: 3
                    icon: 'facebook'



#################################################################
############ THIRD PAGE - FOR SEARCHING INGREDIENTS #############

<SearchIngredientsPage>:
    name: 'thr_page'
    #print_ingr_text_input: search_ingr_field
    canvas.before:
        Rectangle:
            source: 'bg.png'
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: sp(15)


        #for text input
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: 155/255, 187/255, 169/255, 1
            size_hint: .9, .4
            padding: sp(25)
            pos_hint: {'center_x':0.5}
            ScrollView:
                MDTextField:
                    id: search_ingr_field
                    multiline: True
                    hint_text: 'Type ingredients'
                    icon_right: 'progress-question'
                    tooltip_text: 'eara'
                    theme_text_color: "Custom"
                    text_color: "white"

        #for button
        MDBoxLayout:
            orientation: 'vertical'
            padding: sp(20)
            size_hint: 0.54, None
            pos_hint: {'center_x':0.5}
            halign: 'center'

            Button:
                id: search_button
                text: 'Search'
                font_name: 'LexendDeca-VariableFont_wght.ttf'
                font_size: '14sp'
                background_normal: ''
                background_color: 0, 0, 0, 0
                #on_press: root.search()

                on_press:
                    app.root.current = 'ingr_inf_page'
                    root.manager.transition.direction = 'left'

                canvas.before:
                    Color:
                        rgb: 206/255, 137/255, 100/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [30]



        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .2, .1
            pos_hint: {'center_x':0.5}
            halign: 'center'
            valign: 'center'

            MDIconButton:
                icon: 'keyboard-backspace'
                theme_text_color: "Custom"
                text_color: "white"
                background_normal: ''
                md_bg_color: 0, 0, 0, 0
                pos_hint: {'center_x':0.5}
                halign: 'center'
                valign: 'center'


                canvas.before:
                    Color:
                        rgb: 191/255, 126/255, 120/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [360]

                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 50,10
            MDLabel:
                text: '  '

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, .1
            pos_hint: {'center_x': 0.5}
            halign: 'center'

            MDGridLayout:
                cols: 3

                MDIconButton:
                    size_hint: 1,1
                    col: 1
                    icon: 'account-circle-outline'

                MDIconButton:
                    size_hint: 1,1
                    col: 2
                    icon: 'instagram'

                MDIconButton:
                    size_hint: 1,1
                    col: 3
                    icon: 'facebook'

